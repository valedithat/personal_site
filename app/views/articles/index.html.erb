<div class="articles">
  <h1>Blog</h1>
    <% @articles.each do |article| %>
      <div class="article">
        <div class="article_#{article.id}">
            <h3 class="title"><%= link_to article.title, article_path(article) %></h3>
            <div class="description"><%= article.description %></div>
        </div>
      </div>
    <% end %>
</div>
