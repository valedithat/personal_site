<div class="project">
  <%= image_tag(project.image) if project.image.attached? %>
  <h1 class="title"><%= project.title %></h1>
  <hr>
  <div class="project-description"><%= project.description %></div>
  <div class="link"><%= link_to project.link %></div>
  <div class="project-metadata">
    <span class="date"><%= project.formatted_created_at %></span>
  </div>
</div>
